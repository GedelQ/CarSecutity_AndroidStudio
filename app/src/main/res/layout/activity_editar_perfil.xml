<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfil"
    android:background="@drawable/background">


   <TextView
       android:id="@+id/title_cadastro"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Cadastro"
       android:textSize="30sp"
       android:textColor="@color/white"
       android:textStyle="bold"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"

       />

   <View
    android:id="@+id/containerComponents"
    style="@style/ContainerComponents"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    app:layout_constraintTop_toBottomOf="@+id/title_cadastro"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintEnd_toStartOf="parent"
    />

   <EditText

       android:id="@+id/edit_name"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toTopOf="@id/containerComponents"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Nome"

   />

   <EditText

       android:id="@+id/edit_telefone"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_name"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Telefone"

       />

   <EditText

       android:id="@+id/edit_CPF"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_telefone"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="CPF / CNPJ"

       />

   <EditText

       android:id="@+id/edit_RG"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_CPF"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="RG"

       />


   <EditText

       android:id="@+id/edit_CNH"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_RG"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="CNH"
       />



   <EditText

       android:id="@+id/edit_data_nasc"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_CNH"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Data de nascimento"
       />

   <EditText

       android:id="@+id/edit_sangue"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_data_nasc"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Tipo sanguíneo"
       />

   <EditText

       android:id="@+id/edit_ender"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_sangue"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Endereço"
       />

   <EditText

       android:id="@+id/edit_trabalho"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_ender"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Local de tarbalho"
       />

   <EditText

       android:id="@+id/edit_tel_comercial"
       style="@style/Edit_text2"
       app:layout_constraintEnd_toEndOf="@+id/containerComponents"
       app:layout_constraintStart_toStartOf="@+id/containerComponents"
       app:layout_constraintTop_toBottomOf="@+id/edit_trabalho"
       android:textColorHint="@color/black"
       android:textColor="@color/black"
       android:hint="Telefone comercial"
       />


   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/bt_salvar"
       style="@style/BButton3"
       android:text="Salvar"
       android:layout_marginTop="30dp"
       android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/edit_tel_comercial"
       />

</androidx.constraintlayout.widget.ConstraintLayout>