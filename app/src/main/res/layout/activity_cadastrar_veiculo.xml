<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarVeiculo"
    android:background="@drawable/background"
    >


    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_width="372dp"
        android:layout_height="399dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preencha_campo"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/cadastro_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro do veiculo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/preencha_campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preencha os campos abaixo para cadastrar  seu veículo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_veiculo"
        />

    <EditText
        android:id="@+id/placa"
        style="@style/Edit_text2"
        android:text="Placa do veículo"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
         />

    <EditText
        android:id="@+id/marca"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Marca"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/placa"
        />

    <EditText
        android:id="@+id/modelo"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Modelo"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/marca"
        />

    <EditText
        android:id="@+id/cor"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Cor"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/modelo"
        />


    <EditText
        android:id="@+id/ano"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Ano de fabricação"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/cor"
        />

    <EditText
        android:id="@+id/chassi"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Chassi"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/ano"
        />

    <EditText
        android:id="@+id/combustivel"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="Tipo de combustível"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/chassi"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_continuar"
        style="@style/BButton2"
        android:text="Continuar"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>