<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPrincial">

    <View
        android:id="@+id/containerUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/container_user"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="@+id/containerUser"
        app:layout_constraintEnd_toEndOf="@+id/containerUser"
        app:layout_constraintTop_toTopOf="@+id/containerUser"
        app:layout_constraintBottom_toBottomOf="@+id/containerUser"
        />

    <TextView
        android:id="@+id/bem_vindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo 'Úsuário!'"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_marginBaseline="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/containerUser"
        app:layout_constraintBaseline_toBottomOf="@id/containerUser"
        app:layout_constraintEnd_toEndOf="@id/containerUser"
        app:layout_constraintStart_toStartOf="@id/containerUser"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_perfil"
        style="@style/BButton3"
        android:text="Editar perfil"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/bem_vindo"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/assinar"
        style="@style/BButton3"
        android:text="Assinar plano de seguro"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_perfil"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cadastrar_veículo"
        style="@style/BButton3"
        android:text="Cadastrar veículo"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/assinar"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/suporte"
        style="@style/BButton3"
        android:text="Solicitar suporte"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cadastrar_veículo"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gps"
        style="@style/BButton3"
        android:text="GPS"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/suporte"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contatar"
        style="@style/BButton3"
        android:text="Contatar sguradora"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/gps"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sair"
        style="@style/BButton2"
        android:text="Sair"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/contatar"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />






</androidx.constraintlayout.widget.ConstraintLayout>