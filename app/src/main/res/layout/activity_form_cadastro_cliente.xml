<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormCadastroCliente">


    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_width="391dp"
        android:layout_height="857dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="18dp" />


    <TextView
        android:id="@+id/title_cadastrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/text_cadastro"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edit_nome"
        style="@style/Edit_text2"
        android:hint="Nome"
        android:textColor="@color/black"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/edit_Telefone"
        style="@style/Edit_text2"
        android:hint="Telefone"
        android:textColor="@color/black"
        android:inputType="number"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_nome"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/edit_Nasc"
        style="@style/Edit_text2"
        android:hint="Data de nascimento"
        android:textColor="@color/black"
        android:inputType="date"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_Telefone"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/edit_CPF"
        style="@style/Edit_text2"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_Nasc"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/edit_RG"
        style="@style/Edit_text2"
        android:hint="RG"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_CPF"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/edit_CNH"
        style="@style/Edit_text2"
        android:hint="CNH"
        android:textColor="@color/black"
        android:inputType="number"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_RG"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:id="@+id/Edit_sangue"
        style="@style/Edit_text2"
        android:hint="Tipo saguÃ­neo"
        android:textColor="@color/black"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/edit_CNH"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />



</androidx.constraintlayout.widget.ConstraintLayout>