<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Simular">

    <View
        android:id="@+id/view"
        style="@style/ContainerComponents"
        android:layout_width="443dp"
        android:layout_height="105dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logoclean"
        android:layout_width="153dp"
        android:layout_height="147dp"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="-25dp"
        android:src="@drawable/logoclean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/cadastro_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cadastro do veiculo"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simulacao_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="(Simulação)"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preencha_campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="Preencha os campos para cadastrar  seu veículo"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_veiculo" />

    <EditText
        android:id="@+id/placa"
        style="@style/Edit_text2"
        android:hint="Placa do veículo"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        />

    <EditText
        android:id="@+id/marca"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Marca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placa"
        />

    <EditText
        android:id="@+id/modelo"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Modelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marca"
        />

    <EditText
        android:id="@+id/cor"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Cor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modelo"
        />


    <EditText
        android:id="@+id/ano"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Ano de fabricação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cor"
        />

    <EditText
        android:id="@+id/chassi"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Chassi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ano"
        />

    <EditText
        android:id="@+id/combustivel"
        style="@style/Edit_text2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Tipo de combustível"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chassi"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_continuar"
        style="@style/BButton2"
        android:text="Continuar"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/combustivel"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>