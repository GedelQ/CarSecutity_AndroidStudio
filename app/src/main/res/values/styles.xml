<?xml version="1.0" encoding="utf-8"?>
<resources>
// Continer tela inicial

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_componets</item>
        <item name="android:layout_margin">20dp</item>
    </style>

//Container principal
    <style name="ContainerComponents2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/container_componets</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    // Caixa de texto de logon e senha

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        
    </style>

    // Caixa de texto para cadastro
    <style name="Edit_text2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text2</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">100</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>
    // botão login
    <style name="BButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button</item>

    </style>
    // Botões internos
    <style name="BButton2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button2</item>

    </style>




</resources>